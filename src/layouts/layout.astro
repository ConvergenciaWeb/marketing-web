---
import config from "../config"
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";

interface Props {
    title?: string
}
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{config.name}</title>
    <meta name="description" content={config.description}>
    <link rel="icon" href="/favicon.svg" type="image/x-icon">
    <!-- preconects -->
    <link rel="preconnect" href="https://newassets.hcaptcha.com">
    <link rel="preconnect" href="https://js.hcaptcha.com">
    <link rel="sitemap" href="/sitemap-index.xml" />
</head>
<body class="w-screen overflow-x-hidden">
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js" async defer></script>
  <Header />
    
    <slot />
  <Footer />

</body>
</html>
