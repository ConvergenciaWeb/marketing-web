---
import config from "../config";
import Icon from "./icon.astro";
---

<footer class="p-4 bg-white sm:p-6 dark:bg-gray-800">
  <div class="mx-auto max-w-screen-xl">
    <div class="md:flex md:justify-between">
      <div class="mb-6 md:mb-0">
        <a href={config.site} class="flex items-center">
          <Icon />
          <span
            class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"
            >ConvergenciaWeb</span
          >
        </a>
      </div>
      <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
        
        <div>
          <p
            class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
          >
            Recursos
          </p>
          <ul class="text-gray-600 dark:text-gray-400">
            {
              config.resources.map((resource) => (
                <li class="mb-4">
                  <a href={resource.url} class="hover:underline">
                    {resource.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
        <div>
          <p
            class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
          >
            Síguenos
          </p>
          <ul class="text-gray-600 dark:text-gray-400">
            {
              config.social.map((red) => (
                <li class="mb-4">
                  <a href={red.url} class="hover:underline">
                    {red.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
        <div>
          <p
            class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
          >
            Legal
          </p>
          <ul class="text-gray-600 dark:text-gray-400">
            <li class="mb-4">
              <a href="/pdp" class="hover:underline">Políticas de privacidad</a>
            </li>
            <li>
              <a href="/tyc" class="hover:underline"
                >Términos &amp; Condiciones</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
    <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
    <div class="sm:flex sm:items-center sm:justify-between">
      <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400"
        >© 2024 <a href={config.site} class="hover:underline">{config.name}</a
        >. | 
        <a href={`tel:${config.phone}`} class="hover:underline">
          +52 {config.phone}
        </a> | 
        <a href={`mailto:convergenciaweb@trongar.site`} class="hover:underline">
          convergenciaweb@trongar.site
        </a>
      </span>
    </div>
  </div>
</footer>
