---
import { Image } from "astro:assets";
import { truncate, readingTime } from "../utils";
const allPosts = await Astro.glob("../pages/blog/**/*.md");
const posts = allPosts.slice(-7);
// last element in the array
const lastPost = posts.pop();
const lastPosts = [posts.pop(), posts.pop(), posts.pop()];
const otherPosts = [posts.pop(), posts.pop(), posts.pop()];

let cols: "lg:grid-cols-1" | "lg:grid-cols-2" | "lg:grid-cols-3" =
  "lg:grid-cols-3";
if (lastPost) {
  cols = "lg:grid-cols-1";
}
if (lastPosts[0]) {
  cols = "lg:grid-cols-2";
}
if (otherPosts[0]) {
  cols = "lg:grid-cols-3";
}

---

<section class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
    <div class="mx-auto max-w-screen-sm text-center">
      <h2
        class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
      >
        Innovación y Tecnología desde Villahermosa
      </h2>
      <p
        class="mb-8 lg:mb-16 font-light text-gray-500 dark:text-gray-400 sm:text-xl"
      >
        Nuestro blog con noticias, tendencias y consejos en páginas web.
      </p>
    </div>
    <div
      class={`grid gap-8 mb-16 lg:divide-x lg:divide-gray-200 dark:lg:divide-gray-700 ${cols}`}
    >
      <div class="space-y-8 lg:pl-8 mx-auto">
        {
          lastPost && (
            <article>
              <a href={lastPost.url}>
                <Image
                    width={384}
                    height={216}
                  class="mb-5 rounded-lg w-full max-w-sm aspect-video object-cover object-center"
                  src={lastPost.frontmatter.image.url}
                  alt={lastPost.frontmatter.image.alt}
                />
              </a>
              <h4 class="my-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                <a href={lastPost.url}>{lastPost.frontmatter.title}</a>
              </h4>
              <p class="mb-4 font-light text-gray-500 dark:text-gray-400 text-pretty">
                {lastPost.frontmatter.description}
              </p>
              <a
                href={lastPost.url}
                class="inline-flex items-center font-medium text-primary-600 hover:underline dark:text-primary-500"
              >
                Lectura de {readingTime(lastPost?.rawContent()!)} min 
                <svg
                  class="ml-2 w-4 h-4"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
            </article>
          )
        }
      </div>
      <div class="space-y-8 lg:pl-8 max-w-sm mx-auto">
        {
          lastPosts.map((post) => {
            if (post === undefined) return;
            return (
              <article>
                <h4 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                  <a href={post.url}>{post.frontmatter.title}</a>
                </h4>
                <p class="mb-4 font-light text-gray-500 dark:text-gray-400 text-pretty">
                  {truncate(post.frontmatter.description, 100)}
                </p>
                <a
                  href={post.url}
                  class="inline-flex items-center font-medium text-primary-600 hover:underline dark:text-primary-500"
                >
                  Lectura de {readingTime(post?.rawContent()!)} min 
                  <svg
                    class="ml-2 w-4 h-4"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </a>
              </article>
            );
          })
        }
      </div>
      <div class="space-y-8 lg:pl-8 max-w-sm mx-auto">
        {
          otherPosts.map((post) => {
            if (post === undefined) return;
            return (
              <article>
                <h4 class="mb-2 text-lg font-bold tracking-tight text-gray-900 dark:text-white">
                  <a href={post.url}>{post.frontmatter.title}</a>
                </h4>
                <a
                  href={post.url}
                  class="inline-flex items-center font-medium text-primary-600 hover:underline dark:text-primary-500"
                >
                  Lectura de {readingTime(post?.rawContent()!)} min 
                  <svg
                    class="ml-2 w-4 h-4"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </a>
              </article>
            );
          })
        }
      </div>
    </div>
  </div>
</section>
