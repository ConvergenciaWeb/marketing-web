---
import { Image } from "astro:assets";
import config from "../config";
const content = config.sections.features
---

<section class="bg-white dark:bg-gray-900">
  <div
    class="gap-8 py-8 px-4 mx-auto max-w-screen-xl lg:grid lg:grid-cols-2 xl:gap-16 sm:py-16 lg:px-6"
  >
    <Image
      class="mb-4 w-full lg:mb-0 rounded-lg md:sticky md:top-44"
      src="/feature-office-long.webp"
      alt="Equipo de desarrollo 100% tabasqueño(Jalpa y Villahermosa)"
      width="343"
      height="377"
      loading="eager"
    />
    <div class="text-gray-500 dark:text-gray-400 sm:text-lg">
      <h2
        class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
      >
      {content.title}
      </h2>
      <p class="mb-8 font-light lg:text-xl text-pretty">
        {content.description.replace(" Centro", " ")}
        <span
        class="text-blue-600 underline dark:text-blue-500 hover:no-underline"
        data-popover-target="popover-centro">Centro</span
      > 
      </p>
      <div
        data-popover
        id="popover-centro"
        role="tooltip"
        class="absolute z-10 invisible inline-block text-sm text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg shadow-sm opacity-0 w-screen max-w-sm dark:text-gray-400 dark:bg-gray-800 dark:border-gray-600"
      >
        <div class="grid grid-cols-5">
          <div class="col-span-3 p-3">
            <div class="space-y-2">
              <p class="font-semibold text-gray-900 dark:text-white">
                {content.popoverInfo.title}
              </p>
              {content.popoverInfo.paragraphs.map((paragraph) => (
                <p>{paragraph}</p>
              ))}

              <a
              title="Más sobre Centro"
                href="https://tabasco.gob.mx/centro"
                target="_blank"
              rel="noopener"
                class="flex items-center font-medium text-blue-600 dark:text-blue-500 dark:hover:text-blue-600 hover:text-blue-700 hover:underline"
                >{content.popoverInfo.links[0]} <svg
                  class="w-2 h-2 ms-1.5 rtl:rotate-180"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 6 10"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="m1 9 4-4-4-4"></path>
                </svg></a
              >
              <a
              title="Más sobre Nacajuca"
                href="https://tabasco.gob.mx/nacajuca"
                target="_blank"
              rel="noopener"
                class="flex items-center font-medium text-blue-600 dark:text-blue-500 dark:hover:text-blue-600 hover:text-blue-700 hover:underline"
                >{content.popoverInfo.links[1]}<svg
                  class="w-2 h-2 ms-1.5 rtl:rotate-180"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg">
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="m1 9 4-4-4-4"></path>
                </svg></a
              >
              <a
                target="_blank"
                title="Más sobre Jalpa de Méndez"
                href="https://tabasco.gob.mx/jalpa-de-mendez"
              rel="noopener"
                class="flex items-center font-medium text-blue-600 dark:text-blue-500 dark:hover:text-blue-600 hover:text-blue-700 hover:underline"
                >{content.popoverInfo.links[2]}
                <svg
                  class="w-2 h-2 ms-1.5 rtl:rotate-180"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 6 10"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="m1 9 4-4-4-4"></path>
                </svg></a
              >
            </div>
          </div>
          <Image
            width={152}
            height={344}
            loading={"eager"}
            src="/RegionCentro.png"
            class="h-full col-span-2 object-cover object-[38%]"
            alt="Mapa de la Región Centro(Jalpa de Méndez, Nacajuca y Centro)"
          />
        </div>
        <div data-popper-arrow></div>
      </div>
      <div
        class="py-8 mb-6 border-t border-b border-gray-200 dark:border-gray-700"
      >
        <div class="flex">
          <div
            class="flex justify-center items-center mr-4 w-8 h-8 rounded-full bg-primary-100 dark:bg-primary-900 shrink-0"
          >
            <svg
              class="w-5 h-5 text-primary-600 dark:text-primary-300"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-width="2"
                d="M7.111 20A3.111 3.111 0 0 1 4 16.889v-12C4 4.398 4.398 4 4.889 4h4.444a.89.89 0 0 1 .89.889v12A3.111 3.111 0 0 1 7.11 20Zm0 0h12a.889.889 0 0 0 .889-.889v-4.444a.889.889 0 0 0-.889-.89h-4.389a.889.889 0 0 0-.62.253l-3.767 3.665a.933.933 0 0 0-.146.185c-.868 1.433-1.581 1.858-3.078 2.12Zm0-3.556h.009m7.933-10.927 3.143 3.143a.889.889 0 0 1 0 1.257l-7.974 7.974v-8.8l3.574-3.574a.889.889 0 0 1 1.257 0Z"
              ></path>
            </svg>
          </div>
          <div>
            <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">
              {content.features.design.title}
            </h3>
            <p class="mb-2 font-light text-gray-500 dark:text-gray-400">
              {content.features.design.description}
            </p>
            <button
              data-modal-show="design-modal"
              data-modal-target="design-modal"
              class="inline-flex items-center text-primary-600 hover:text-primary-800 dark:text-primary-400 dark:hover:text-primary-600"
            >
              Saber más
              <svg
                class="ml-1 w-6 h-6"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                  fill-rule="evenodd"
                  d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                  clip-rule="evenodd"></path></svg
              >
            </button>
          </div>
        </div>
        <div class="flex pt-8">
          <div
            class="flex justify-center items-center mr-4 w-8 h-8 bg-purple-100 rounded-full dark:bg-purple-900 shrink-0"
          >
            <svg
              class="w-5 h-5 text-purple-600 dark:text-purple-300"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-width="2"
                d="m21 21-3.5-3.5M17 10a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"></path>
            </svg>
          </div>
          <div>
            <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">
              {content.features.seo.title}
            </h3>
            <p class="mb-2 font-light text-gray-500 dark:text-gray-400">
              {content.features.seo.description}
            </p>
            <button
              data-modal-show="seo-modal"
              data-modal-target="seo-modal"
              class="inline-flex items-center text-purple-600 hover:text-purple-800 dark:text-purple-500 dark:hover:text-purple-600"
            >
              Saber más
              <svg
                class="ml-1 w-6 h-6"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                  fill-rule="evenodd"
                  d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                  clip-rule="evenodd"></path></svg
              >
            </button>
          </div>
        </div>
        <div class="flex pt-8">
          <div
            class="flex justify-center items-center mr-4 w-8 h-8 bg-teal-100 rounded-full dark:bg-teal-900 shrink-0"
          >
            <svg
              class="w-5 h-5 text-teal-600 dark:text-teal-300"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 15h12M6 6h12m-6 12h.01M7 21h10a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1v16a1 1 0 0 0 1 1Z"
              ></path>
            </svg>
          </div>
          <div>
            <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">
              {content.features.responsive.title}
            </h3>
            <p class="mb-2 font-light text-gray-500 dark:text-gray-400">
              {content.features.responsive.description}
            </p>
            <button
              data-modal-show="responsive-modal"
              data-modal-target="responsive-modal"
              class="inline-flex items-center text-teal-600 hover:text-teal-800 dark:text-teal-500 dark:hover:text-teal-600"
            >
              Saber más
              <svg
                class="ml-1 w-6 h-6"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                  fill-rule="evenodd"
                  d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                  clip-rule="evenodd"></path></svg
              >
            </button>
          </div>
        </div>
        <div class="flex pt-8">
          <div
            class="flex justify-center items-center mr-4 w-8 h-8 bg-indigo-100 rounded-full dark:bg-indigo-900 shrink-0"
          >
            <svg
              class="w-5 h-5 text-indigo-600 dark:text-indigo-300"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14.079 6.839a3 3 0 0 0-4.255.1M13 20h1.083A3.916 3.916 0 0 0 18 16.083V9A6 6 0 1 0 6 9v7m7 4v-1a1 1 0 0 0-1-1h-1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1h1a1 1 0 0 0 1-1Zm-7-4v-6H5a2 2 0 0 0-2 2v2a2 2 0 0 0 2 2h1Zm12-6h1a2 2 0 0 1 2 2v2a2 2 0 0 1-2 2h-1v-6Z"
              ></path>
            </svg>
          </div>
          <div>
            <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">
              {content.features.support.title}
            </h3>
            <p class="mb-2 font-light text-gray-500 dark:text-gray-400">
              {content.features.support.description}
            </p>
            <button
              data-modal-show="support-modal"
              data-modal-target="support-modal"
              class="inline-flex items-center text-indigo-600 hover:text-indigo-800 dark:text-indigo-500 dark:hover:text-indigo-600"
            >
              Saber más
              <svg
                class="ml-1 w-6 h-6"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                  fill-rule="evenodd"
                  d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                  clip-rule="evenodd"></path></svg
              >
            </button>
          </div>
        </div>
      </div>
      <p class="text-sm">
        {content.footer}
      </p>
    </div>
  </div>
</section>

{Object.values(content.features).map((feature, index)=>{
  const id = Object.keys(content.features)[index] + "-modal"
  return(
  <div
    {id}
    tabindex="-1"
    aria-hidden="true"
    class=" hidden fixed z-50  w-full inset-0"
  >
    <div class="relative p-4 w-full max-w-2xl max-h-full">
      <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
        <div
          class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600"
        >
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
            {feature.title}
          </h3>
          <button
            type="button"
            class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
            data-modal-hide={id}
          >
            <svg
              class="w-3 h-3"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 14 14"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
            </svg>
            <span class="sr-only">Close modal</span>
          </button>
        </div>
        <div class="p-4 md:p-5 space-y-4 prose max-h-[70vh] overflow-y-auto">
          <p class="text-base leading-relaxed text-gray-500 dark:text-gray-400">
            {feature.more}
          </p>
          <ul class="list-disc list-inside text-gray-500 dark:text-gray-400">
            {feature.list.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
        <div
          class="flex items-center p-4 md:p-5 border-t border-gray-200 rounded-b dark:border-gray-600"
        >
          <button
            data-modal-hide={id}
            type="button"
            class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-blue-800"
            >Cerrar</button
          >
        </div>
      </div>
    </div>
  </div>
)})}

